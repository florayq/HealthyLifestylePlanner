<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Healthy Lifestyle Planner</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white">
        <div class="container">
            <div class="navbar-header" style="font-family:'Ink Free'; font-size:21px; font-weight:bold; padding-top:10px">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Healthy Lifestyle Planner", "Index", "Home", new { area = "" })
            </div>
            <div class="navbar-collapse collapse">
                <table class="nav navbar-nav">
                    <tr>
                        <th>@Html.ActionLink("Home", "Index", "Home")</th>
                        <th>@Html.ActionLink("Daily Plans", "About", "Home", new { num = 1 }, null)</th>
                        <th>@Html.ActionLink("Monthly Plans", "Homepg", "Home")</th>
                        @*<th>@Html.ActionLink("Clock", "Contact", "Home")</th>*@
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div style="padding-left: 100px; padding-right:100px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Healthy Lifestyle Planner by Flora Q</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    th {
        padding-top: 15px;
        padding-left: 20px;
        padding-right: 20px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
    }
</style>
